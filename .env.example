# HyLo Environment Configuration
# Copy this file to .env.local and fill in values

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=demo

# Network Mode: "mainnet" | "testnet" | "buildbear"
NEXT_PUBLIC_NETWORK_MODE=testnet

# DEMO MODE - Set to "true" for hackathon demo (simulates LI.FI)
NEXT_PUBLIC_DEMO_MODE=true

# HyperEVM Testnet RPC (chain 998)
NEXT_PUBLIC_HYPEREVM_TESTNET_RPC=https://api.hyperliquid-testnet.xyz/evm

# BuildBear Sandbox RPCs (optional, for real testing)
NEXT_PUBLIC_BUILDBEAR_ETHEREUM_RPC=
NEXT_PUBLIC_BUILDBEAR_POLYGON_RPC=
NEXT_PUBLIC_BUILDBEAR_ARBITRUM_RPC=
